{
  "routes": [
    {
      "route": "/api/*",
      "rewrite": "https://microjira.reddesert-44c5d750.westeurope.azurecontainerapps.io/api/*",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0",
        "Pragma": "no-cache",
        "Expires": "-1"
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*"]
  },
  "globalHeaders": {
    "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
  }
}
